<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/b9ce355812.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="shadow-sm bg-dark text-white">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <h2 class="navbar-brand text-white bg-dark">
          <%= link_to root_path do %>
            <strong class="text-white">Bookers</strong>
          <% end %>
          </h2>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto text-muted">
            
            <% if user_signed_in? %>
              <li class="nav-item p-3">
                <%= link_to user_path(current_user.id) do %>
                  <strong class="text-white"><i class="fas fa-home"></i>Home</strong>
                <% end %>
              </li>
              <li class="nav-item p-3">
                <%= link_to users_path do %>
                  <strong class="text-white"><i class="fas fa-users"></i>Users</strong>
                <% end %>
              </li>
              <li class="nav-item  p-3">
                <%= link_to books_path do %>
                  <strong class="text-white"><i class="fas fa-book-open"></i>Books</strong>
                <% end %>
              </li>
              <li class="nav-item  p-3">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <strong class="text-white"><i class="fas fa-sign-out-alt"></i>logout</strong>
                <% end %>
              </li>
              
            <% else %>
              <li class="nav-item  p-3">
                <%= link_to root_path do %>
                  <strong class="text-white"><i class="fas fa-home"></i>Home</strong>
                <% end %>
              </li>
              <li class="nav-item  p-3">
                <%= link_to home_about_path do %>
                  <strong class="text-white"><i class="fas fa-link"></i>About</strong>
                <% end %>
              </li>
              <li class="nav-item  p-3">
                <%= link_to new_user_registration_path do %>
                  <strong class="text-white"><i class="fas fa-user-plus"></i>sign up</strong>
                <% end %>
              </li>
              <li class="nav-item  p-3">
                <%= link_to new_user_session_path do %>
                  <strong class="text-white"><i class="fas fa-sign-in-alt"></i>login</strong>
                <% end %>
              </li>
            <% end %>
            
          </ul>
        </div>
    </nav>
  </header>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <% if flash[:notice] %>
            <%= flash[:notice] %>
          <% end %>
        </div>
      </div>
    </div>  
    
    
    <%= yield %>
  </body>
  <footer class="text-center"> 
    CopyRight Infratop.inc
  </footer>
</html>
